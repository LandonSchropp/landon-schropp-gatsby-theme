<!doctype html>
<html lang="en">
  <head>
    {% set title = title or pagination.items[0].title %}
    {% set description = description or pagination.items[0].description %}

    {% include 'partials/google-analytics.njk' %}

    <meta charset="utf-8">
    <title>{{ title | required }}</title>

    <meta name="description" content="{{ description | trim | required }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="/images/flannel.png">

    <link
      href="https://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400i,700,700i%7COpen+Sans:400,700"
      rel="stylesheet"
    >

    <link
      href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i"
      rel="stylesheet"
    >

    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/index.css">
  </head>

  <body>
    {% set isLandingPage = page.url == "/" %}

    {% if not isLandingPage %}
      {% include "partials/main-navigation.njk" %}
    {% endif %}

    <main class="{{ "landing" if isLandingPage  else "content" }}">
      {{ content | safe }}
    </main>

    <script src="/javascript/index.js"></script>
  </body>
</html>
