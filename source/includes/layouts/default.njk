<!doctype html>
<html lang="en">
  <head>
    {% include 'partials/google-analytics.njk' %}

    <meta charset="utf-8">
    <title>{{ title | required }}</title>

    {# TODO: When eleventy supports interpolation inside of front matter, this can be removed. #}
    {# https://github.com/11ty/11ty.io/issues/33 #}
    {% set description %}
      {% if r/^\/notes\/./.test(page.url) %}
        These are my personal notes for {{ title }} by {{ authors | listify }}.
      {% else %}
        {{ description }}
      {% endif %}
    {% endset %}

    <meta name="description" content="{{ description | trim | required }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="/images/flannel.png">

    <link
      href="https://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400i,700,700i%7COpen+Sans:400,700"
      rel="stylesheet"
    >

    <link
      href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i"
      rel="stylesheet"
    >
    <link rel="stylesheet" href="/stylesheets/index.css">
  </head>

  <body>

    {% if page.url != "/" %}
      {% include "partials/main-navigation.njk" %}
    {% endif %}

    <main class="{{ mainClass }}">
      {{ content | safe }}
    </main>

    <script src="/javascript/index.js"></script>
  </body>
</html>
